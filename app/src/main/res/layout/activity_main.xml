<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- ========================================== -->
    <!-- 1. ÜST BİLGİ BARI                          -->
    <!-- ========================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_info_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="90dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txt_iso_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/productsans_bold"
            android:text="ISO: 100"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:letterSpacing="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btn_format_indicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="45dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_jpeg_indicator"
            android:alpha="0.9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ========================================== -->
    <!-- 2. PREVIEW PENCERESİ (3:4 ORANI SABİT)     -->
    <!-- ========================================== -->
    <!-- layout_marginBottom="20dp": Alt menüden uzaklaşma payı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/preview_card_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/black"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_info_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_panel_container">

        <!-- RelativeLayout: İçindeki elemanları üst üste bindirmek için -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 1. TEXTUREVIEW (En altta) -->
            <com.ghostyapps.heycam.AutoFitTextureView
                android:id="@+id/texture_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 2. FOCUS HALKASI -->
            <View
                android:id="@+id/focus_ring"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/focus_ring"
                android:visibility="invisible" />

            <!-- 3. FLASH EFEKTİ -->
            <View
                android:id="@+id/shutter_flash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:alpha="0" />

            <TextView
                android:id="@+id/custom_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_toast_pill"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:fontFamily="@font/productsans_bold"
                android:letterSpacing="0.05"
                android:visibility="gone"
                android:elevation="20dp" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <!-- ========================================== -->
    <!-- 3. ALT KONTROL PANELİ (HEPSİ BİR ARADA)    -->
    <!-- ========================================== -->
    <LinearLayout
        android:id="@+id/bottom_panel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- RULER (TEKERLEK) -->
        <RelativeLayout
            android:id="@+id/shutter_wheel_container"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shutter_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:requiresFadingEdge="horizontal"
                android:fadingEdgeLength="120dp"
                android:overScrollMode="never" />

            <View
                android:id="@+id/wheel_needle"
                android:layout_width="3dp"
                android:layout_height="18dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_needle"
                android:elevation="10dp" />
        </RelativeLayout>

        <!-- SHUTTER / ISO YAZILARI -->
        <LinearLayout
            android:id="@+id/mode_selector_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_shutter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans_bold"
                android:text="SHUTTER"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:letterSpacing="0.15"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans_bold"
                android:text="|"
                android:textColor="#333333"
                android:padding="8dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/btn_iso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans_bold"
                android:text="ISO"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:letterSpacing="0.15"
                android:padding="8dp" />
        </LinearLayout>

        <!-- BUTONLAR (GALERİ - DEKLANŞÖR - MOD) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_gallery"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gallery_indicator"
                android:alpha="0.9" />

            <View android:layout_width="50dp" android:layout_height="1dp" />

            <ImageButton
                android:id="@+id/take_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_shutter_button" />

            <View android:layout_width="50dp" android:layout_height="1dp" />

            <ImageButton
                android:id="@+id/btn_mode_switch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_auto_indicator"
                android:alpha="0.9" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>